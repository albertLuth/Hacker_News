<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, id: :post_title  %>
  </div>

  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url, id: :post_url %>
  </div>

  <div class="message">
    <strong><%= f.label " or" %></strong>
  </div>
  <br>

  <div class="field">
    <%= f.label :text %><br>
    <%= f.text_area :text, id: :post_text %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>

  <br>
  <div class="message">
    <%= f.label "Fill the url field or the text one, not both" %>
  </div>


<% end %>