<head>
  <meta name="referrer" content="origin">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" type="text/scss" href="posts.scss">
  <link rel="shortcut icon" href="favicon.ico">
  <title>Submit | Hacker News</title>
  <style>

    body {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 10pt;
      color: #828282;
    }

    td {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 10pt;
      color: #828282;
    }

    .admin td {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 8.5pt;
      color: #000000;
    }

    .subtext td {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 7pt;
      color: #828282;
    }

    input {
      font-family: monospace;
      font-size: 10pt;
    }

    input[type=\"submit\"] {
      font-family: Verdana, Geneva, sans-serif;
    }

    textarea {
      font-family: monospace;
      font-size: 10pt;
    }

    #hnmain {
      border: #000000;
      padding: 0;
      border-spacing: 0;
      border-collapse: separate;
      width: 85%;
      background-color: #f6f6ef;
    }

    #tableheader {
      border: #000000;
      padding: 2px;
      border-spacing: 0;
      border-collapse: separate;
      width: 100%;
    }

    #linkselected {
      color: #ffffff;
    }

    a:link {
      color: #000000;
      text-decoration: none;
    }

    a:visited {
      color: #828282;
      text-decoration: none;
    }

    a:hover {
      background-color: transparent
    }

    .title {
      margin-left: 20px;
      font-family: Verdana, Geneva, sans-serif;
      font-size: 15pt;
      color: #828282;
    }

    .subtext {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 7pt;
      color: #828282;
    }

    .pagetop {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 10pt;
      color: #222222;
    }

    .comhead {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 8pt;
      color: #828282;
    }

    .comment {
      font-family: Verdana, Geneva, sans-serif;
      font-size: 9pt;
      color: #000000;
    }

    .hnname {
      margin-right: 5px;
    }

    .comment a:link, .comment a:visited {
      text-decoration: underline;
    }

    .noshow {
      display: none;
    }

    .nosee {
      visibility: hidden;
      pointer-events: none;
      cursor: default
    }

    .pagetop a:visited {
      color: #000000;
    }

    .subtext a:link, .subtext a:visited {
      color: #828282;
    }

    .subtext a:hover {
      text-decoration: underline;
    }

    .comhead a:link, .subtext a:visited {
      color: #828282;
    }

    .comhead a:hover {
      text-decoration: underline;
    }

    .default p {
      margin-top: 8px;
      margin-bottom: 0px;
    }

    pre {
      overflow: auto;
      padding: 2px;
    }

    pre:hover {
      overflow: auto
    }

    .rotate180 {
      -webkit-transform: rotate(180deg); /* Chrome and other webkit browsers */
      -moz-transform: rotate(180deg); /* FF */
      -o-transform: rotate(180deg); /* Opera */
      -ms-transform: rotate(180deg); /* IE9 */
      transform: rotate(180deg); /* W3C complaint browsers */

      /* IE8 and below */
      -ms-filter: "progid:DXImageTransform.Microsoft.Matrix(M11=-1, M12=0, M21=0, M22=-1, DX=0, DY=0, SizingMethod='auto expand')";
    }

  </style>
</head>
<body>
<center>
  <table id="hnmain">
    <tr>
      <td style="background-color: #ff6600">
        <table id="tableheader">
          <tr>
            <td style="width:18px;padding-right:4px">
              <a href="/">
                <img src="https://news.ycombinator.com/y18.gif" width="18" height="18" style="border:1px white solid; background-color: transparent">
              </a>
            </td>

            <td style="line-height:12pt; height:10px;">
                <span class="pagetop">
                  <b class="hnname">
                    <a href="/">Hacker News</a>
                  </b>
                  <a href="/newest">new</a> |
                  <% if current_user %> <a href="/threads">threads</a> | <% end %>
                  <a href="/ask">ask</a> |
                  <% if current_user %>
                    <a href="/posts/new">submit</a>
                  <% else %>
                    <%= link_to "login", "/auth/google_oauth2", id: "sign_in" %>
                  <% end %>
                </span>
            </td>

            <td style="text-align:right;padding-right:4px;">
                <span class="pagetop">
                  <% if current_user %>

                    <a href="/users/<%= current_user.id %>"><%= current_user.name %></a> |
                    <%= link_to "logout", signout_path, id: "sign_out" %>

                  <% else %>
                    <%= link_to "login", "/auth/google_oauth2", id: "sign_in" %>
                  <% end %>
                </span>
            </td>
          </tr>
        </table>
      </td>
    </tr>
    <tr style="height:10px"></tr>
    <tr>
      <td>
        <div class="title">Edit Reply</div>
        <br>
        <div style="margin-left:20px">
          <%= render 'form', reply: @reply %>
        </div>
      </td>
    </tr>
  </table>
</center>
</body>

